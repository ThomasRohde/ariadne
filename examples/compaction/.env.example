# OpenAI API Configuration
OPENAI_API_KEY=sk-...

# Compaction Configuration
COMPACT_MODEL=gpt-4
COMPACT_MAX_CONTEXT_TOKENS=128000
COMPACT_TRIGGER_PCT=0.85
COMPACT_KEEP_RECENT_TURNS=6
COMPACT_KEEP_TOOL_IO_PAIRS=4
COMPACT_STRATEGY=task_state

# Ariadne Integration
COMPACT_ARIADNE_URL=http://localhost:5175/ingest
COMPACT_TELEMETRY_ENABLED=true

